<div class="col-md-12 col-sm-12" style="font-family: sans-serif; float: none">
    <div class="x_panel">
        <div class="x_title">
            <h2>Bookings</small></h2>

            <div class="clearfix"></div>
        </div>
        <div class="x_content">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Tên</th>
                        <th>Số điện thoại</th>
                        <th>Tên quán</th>
                        <th>Sự kiện</th>
                        <th>Số người</th>
                        <th>Book ngày</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each bookings}}

                    <tr>
                        <th scope="row">{{increase @index 1}}</th>
                        <td>{{this.name}}</td>
                        <td>{{this.phone}}</td>
                        <td>{{this.brand}}</td>
                        <td>{{this.event}}</td>
                        <td>{{this.members}}</td>
                        <td>{{this.date}}</td>
                    </tr>

                    {{else}}
                    <tr>
                        <td colspan="5" style="text-align: center">Chưa có booking</td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>

        </div>
    </div>
</div>